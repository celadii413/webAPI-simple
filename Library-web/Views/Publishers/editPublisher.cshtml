@model Library_web.Models.DTO.editPublisherDTO
@{
    var publisher = ViewBag.Publisher;
}

<link rel="stylesheet" href="~/css/publisher.css" />

<h2>Edit Publisher</h2>

<form asp-controller="Publishers" asp-action="editPublisher" asp-route-id="@ViewBag.PublisherId" method="post">
    <div class="form-group">
        <label>Name</label><br />
        <input type="text" name="Name" value="@publisher?.Name" class="form-control" /><br />
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
</form>
